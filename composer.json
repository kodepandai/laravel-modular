{
  "name": "kodepandai/laravel-modular",
  "type": "library",
  "version": "1.0.0",
  "require": {
    "laravel/framework": "^9|^8",
    "wikimedia/composer-merge-plugin": "^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.2",
    "nunomaduro/larastan": "^2.0",
    "orchestra/testbench": "^7.0",
    "pestphp/pest": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "KodePandai\\Modular\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KodePandai\\Modular\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyse": "phpstan analyse",
    "lint": "php-cs-fixer fix --allow-risky=yes",
    "pest": "pest --stop-on-failure",
    "test": [
      "@analyse",
      "@lint",
      "@pest"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "KodePandai\\Modular\\ModularServiceProvider"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
